{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "origamiui/custom-offcanvas",
  "version": "0.2.0",
  "title": "Offcanvas",
  "category": "origamiui",
  "description": "A custom Offcanvas block.",
  "attributes": {
    "offcanvasType": {
      "type": "string",
      "default": "oui_offcanvas_slide"
    },
    "offcanvasPosition": {
      "type": "string",
      "default": "oui_offcanvas_right"
    },
    "offcanvasBreakPoint": {
      "type": "string",
      "default": "oui_offcanvas-breakpoint-sm"
    },
    "styles": {
      "type": "object",
      "default": {
        "base": {
          "flex": {
            "display": {
              "sm": "",
              "md": "",
              "lg": ""
            },
            "direction": {
              "sm": "",
              "md": "",
              "lg": ""
            },
            "align": {
              "sm": "",
              "md": "",
              "lg": ""
            },
            "justify": {
              "sm": "",
              "md": "",
              "lg": ""
            },
            "wrap": {
              "sm": "",
              "md": "",
              "lg": ""
            },
            "grow": {
              "sm": "",
              "md": "",
              "lg": ""
            },
            "shrink": {
              "sm": "",
              "md": "",
              "lg": ""
            },
            "self": {
              "sm": "",
              "md": "",
              "lg": ""
            },
            "order": {
              "sm": "",
              "md": "",
              "lg": ""
            },
            "gapSpace": "",
            "gap": {
              "row": {
                "sm": "",
                "md": "",
                "lg": ""
              },
              "column": {
                "sm": "",
                "md": "",
                "lg": ""
              }
            }
          },
          "offcanvas": {
            "bgColor": "#fff",
            "width": {
              "sm": "80%",
              "md": "100%",
              "lg": "100%"
            }
          }
        }
      }
    }
  },
  "supports": {
    "html": false,
    "layout": false,
    "anchor": true,
    "color": {
      "background": true,
      "gradients": true
    },
    "__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
    "shadow": true,
    "spacing": {
      "margin": true,
      "padding": true
    },
    "background": {
      "backgroundImage": true,
      "backgroundSize": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "textAlign": true
    }
  },
  "style": "oui-css",
  "editorStyle": "oui-editor",
  "textdomain": "origamiui",
  "script": "file:./build/index.js"
}
